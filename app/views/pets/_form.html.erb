<%= form.label :name %>
<%= form.text_field :name%>
<br>

<%= form.label :age_year, "The age of the year" %>
<%= form.number_field :age_year %>
<br>

<%= form.label :age_month, "The age of the month" %>
<%= form.number_field :age_month %>
<br>

<%= form.label :description %>
<%= form.text_area :description %>
<br>

<%= form.label :pet_type %>
<%= radio_button_tag("pet[pet_type]", "dog", true) %>
<%= label_tag(:role_child, "Dog") %>
<%= radio_button_tag("pet[pet_type]", "cat") %>
<%= label_tag(:age_adult, "cat") %>
<br>

<%= form.hidden_field :animal_shelter_id, value: current_user.animal_shelter_id %>
<br>
<%= form.hidden_field :staff_id, value: current_user.id %>
<br>