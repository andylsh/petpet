<%= form.label :first_name %>
<%= form.text_field :first_name%>
<br>

<%= form.label :last_name %>
<%= form.text_field :last_name%>
<br>

<%= form.label :phone_number %>
<%= form.number_field :phone_number %>
<br>

<%= form.label :address1, "address line 1" %>
<%= form.text_field :address1 %>
<br>

<%= form.label :address2, "address line 2" %>
<%= form.text_field :address2 %>
<br>

<%= form.label :city %>
<%= form.text_field :city%>
<br>

<%= form.label :state %>
<%= form.select(:state, options_for_select([['JOHOR', 'JOHOR'],['KEDAH', 'KEDAH'],['KELANTAN', 'KELANTAN'],['KL', 'KL'],['MELAKA', 'MELAKA'],['N.SEMBILAN','N.SEMBILAN'],['P.PENANG', 'P.PENANG'],['PERAK', 'PERAK'],['PERLIS', 'PERLIS'],['SABAH', 'SABAH'],['SARAWAK', 'SARAWAK'], ['SELANGOR', 'SELANGOR'], ['TERENGGANU', 'TERENGGANU']])) %>
<br>

<%= form.label :postcode %>
<%= form.number_field :postcode %>
<br>

<%= form.label :email %>
<%= form.text_field :email, type: 'email' %>
<br>

<%= form.label :password %>
<%= form.password_field :password%>
<br>

<%= form.label :password_confirmation %>
<%= form.password_field :password_confirmation %>
<br>

<%= form.label :role %>
<%= radio_button_tag("user[role]", "normal_user", true) %>
<%= label_tag(:role_child, "Normal user") %>
<%= radio_button_tag("user[role]", "animal_shelter") %>
<%= label_tag(:age_adult, "Company") %>

<br>